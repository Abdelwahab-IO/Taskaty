<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:background="@color/task_card_color"
    android:elevation="0dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeText_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/timeTextExample"
            android:textColor="@color/text_color_50"
            android:textSize="@dimen/text_size_8"
            app:drawableStartCompat="@drawable/baseline_access_time_24"
            app:layout_constraintStart_toEndOf="@+id/dateText_todo"
            app:layout_constraintTop_toBottomOf="@+id/taskCardHeader_ToDo"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/taskCardHeader_ToDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"
            android:text="@string/Todo_title"
            android:textColor="@color/text_color_87"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateText_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/dateTextExample"
            android:textColor="@color/text_color_50"
            android:textSize="@dimen/text_size_8"
            app:drawableStartCompat="@drawable/outline_calendar_month_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskCardHeader_ToDo"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/Todo_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_todo"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="@string/todoText"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateText_todo"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingEnd="5dp"
            android:text="@string/Team_member_circle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toEndOf="@+id/Todo_Text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
