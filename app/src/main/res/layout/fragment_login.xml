<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingHorizontal="16dp"
    tools:context=".app.ui.fragments.LoginFragment">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_color_87"
        android:text="@string/text_login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/text_login_description"
        android:textColor="@color/text_color_50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/text_title"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <EditText
        android:id="@+id/edit_text_user"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center_vertical"
        android:hint="@string/hint_user_name"
        android:fontFamily="@font/roboto"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color_87"
        android:textColorHint="@color/text_color_60"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_color_87"
        android:background="@drawable/edit_text_background"
        android:gravity="center_vertical"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/text_color_60"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_user"
        app:layout_constraintStart_toStartOf="@+id/edit_text_user"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_user" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:text="@string/text_button_login"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_password"
        app:layout_constraintStart_toStartOf="@+id/edit_text_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_password" />


</androidx.constraintlayout.widget.ConstraintLayout>